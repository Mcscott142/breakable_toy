<div class="panel panel-default">
  <div class="panel-heading" style="background-color:#0071BC;color:#fff;">All Listings</div>
    <div class="panel-body">
  <b>Sort By</b>
  <%= link_to "Category", {:controller => "listings", :action => "index", :order_by => 'category' }, class: "pull-right"%>
  <%= link_to "User", {:controller => "listings", :action => "index", :order_by => 'user' }, class: "pull-right"%>
  <%= link_to "Location", {:controller => "listings", :action => "index", :order_by => 'user.location' }, class: "pull-right"%>
</ul>
      <% @listings.each do |listing| %>
        <hr>

        <h2><%= listing.name %></h2>
        <%= image_tag listing.image.small_thumb, class: "img-responsive pull-right" if listing.image? %>
        <h5><%= listing.category.name %></h5>
        <h5><%= truncate(listing.description, length: 25) %>
        <br><br>
        <%= link_to "See More", listing_path(listing), class: "btn btn-default"%>

        <hr>
      <% end %>
    </div><!--/panel-body-->
</div><!--/panel-->


