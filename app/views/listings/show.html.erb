<div class="panel panel-default">
  <div class="panel-heading" style="background-color:#0071BC;color:#fff;">Listing</div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-6">
          <h1><%= @listing.name %></h1>
              <%= "Category: #{@listing.category.name}" %>
              <br>
              <%= "Value: $#{@listing.value}" %>
              <br>
              <%= "Location: #{@listing.user.city}, #{@listing.user.state}" %>
              <br>
              <%= "Posted by: #{@listing.user.first_name} #{@listing.user.last_name}" %>
        </div>
        <div class="col-md-6">
          <%= image_tag @listing.image.med_thumb, class: "img-responsive" if @listing.image? %>
        </div>
      </div>

      <hr>

      <h4>Item Description</h4>
      <%= @listing.description %>
      <br><br>
      <% if @listing.user == current_user  %>
        <%= link_to 'Edit Listing', edit_listing_path(@listing), class: "btn btn-default" %>
        <%= link_to "Remove Listing", @listing, method: :delete, class: "btn btn-default" %>
      <% else %>
        <%= link_to "Make an Offer", new_listing_offer_path(@listing), class: "btn btn-default" %>
      <% end %>

      <hr>
      <br>

      <h2>Offers</h2>
      <hr>
      <% @offers.each do |o| %>

        <div class="col-md-6">
          <h5><%= link_to o.title, offer_path(o) %></h5>
          Message: <br>
          <%= o.description %>
          <br><br>
          <%= link_to "Edit Offer", edit_offer_path(o), class: "btn btn-default" if o.user == current_user %>
          <% if @listing.user == current_user && o.status == "Open" %>
            <%= button_to "Accept Offer", accept_path(o), method: :patch, class: "btn btn-default" %>
            <%= button_to "Reject Offer", reject_path(o), method: :patch, class: "btn btn-default" %>
          <%end%>
          <br><br><br>
          <h4>Messages</h4>

              <% o.comments.each do |c| %>
              <b><%= "#{c.user.first_name} #{c.user.last_name}"%></b><br>
              <%= c.description %>

              <% end %>
          <br><br><br>
          <%= simple_form_for [ o, @comment] do |f| %>
           <%= f.input :description, label: false %>
           <i class="fa fa-comments"><%= f.submit label: "Post Comment",  class: "btn btn-default"  %></i>
          <% end %>

        </div>

        <div class="col-md-6">
          <%= image_tag o.swap_listing.image.med_thumb, class: "img-responsive" if o.swap_listing.image? %>
          <br>
          <br>
          <h5><%= o.swap_listing.name %></h5>
          <h6>Item Description:</h6>
          <%= o.swap_listing.description %>
          <br>
          <%= "Category: #{o.swap_listing.category.name}" %>
          <br>
          <%= "Value: $#{o.swap_listing.value}" %>
          <br>
          <%= "Location: #{o.swap_listing.user.city}, #{o.swap_listing.user.state}" %>
          <br>
          <%= "Posted by: #{o.swap_listing.user.first_name} #{o.swap_listing.user.last_name}" %>
          <br>
        </div>
      <% end %>
        <br>
        <br>

          <hr>


  </div><!--/panel-body-->
</div><!--/panel-->





